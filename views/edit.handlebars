<form action="/records/{{{record._id}}}/edit?_method=PUT" method="POST">
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label"><small>*必填欄位</small></label>
        <div class="col-sm-10">
        <span>請修改你的支出</span>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">名稱*</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="inputName" name="name" value="{{{record.name}}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputDate" class="col-sm-2 col-form-label">日期*</label>
        <div class="col-sm-10">
        <input type="date" class="form-control" id="inputDate" name="date" value="{{{record.date}}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputCategory" class="col-sm-2 col-form-label">類別*</label>
        <select name="category">
            <option value="家居物業">家居物業</option>
            <option value="交通出行" {{#if records.category}} selected {{/if}}>交通出行</option>
            <option value="休閒娛樂">休閒娛樂</option>
            <option value="餐飲食品">餐飲食品</option>
            <option value="其他">其他</option>
        </select>       
    </div>
    <div class="form-group row">
        <label for="inputAmount" class="col-sm-2 col-form-label">金額*</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputAmount" name="amount" value="{{{record.amount}}}">
        </div>
    </div>
    <button type="submit" class="btn btn-warning btn-lg btn-block mt-4">送出</button>
</form>
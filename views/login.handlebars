<div class="row mt-5">
    <div class="col-sm-8 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">登入</h1>
            <form action="/users/login" method="POST">  
                <div class="form-group">
                    <label for="email">帳號</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="輸入信箱">
                </div>
                <div class="form-group mb-4">
                    <label for="password">密碼</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="輸入密碼">
                </div>
                {{> messages}}
                <button type="submit" class="btn btn-warning btn-block btn-lg">登入</button>
                <p class="lead mt-4">
                    沒有帳號嗎? <a href="/users/register">註冊</a>或<a href="/auth/facebook"><i class="fa fa-facebook-square" aria-hidden="true"></i></a>
                </p>    
            </form>
        </div>
    </div>
</div>


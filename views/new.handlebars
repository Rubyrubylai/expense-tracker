<form action="/records" method="POST" class="col-8">
    <div class="form-group row mb-4">
        <label for="inputName" class="col-sm-3 col-form-label"><small>*必填欄位</small></label>
        <div class="col-sm-9">
        <center><h3>請輸入你的支出</h3></center>
        </div>
    </div>
    <div class="form-group row mb-4">
        <label for="inputName" class="col-sm-3 col-form-label">名稱*:</label>
        <div class="col-sm-9">
        <input type="text" class="form-control" id="inputName" name="name">
        </div>
    </div>
    <div class="form-group row mb-4">
        <label for="inputDate" class="col-sm-3 col-form-label">日期*:</label>
        <div class="col-sm-9">
        <input type="date" class="form-control" id="inputDate" name="date">
        </div>
    </div>
    <div class="form-group row mb-4">
        <label for="inputCategory" class="col-sm-3 col-form-label">類別*:</label>
        <div class="col-sm-9">
        <select name="category" class="form-control">
            <option value="家居物業">家居物業</option>
            <option value="交通出行">交通出行</option>
            <option value="休閒娛樂">休閒娛樂</option>
            <option value="餐飲食品">餐飲食品</option>
            <option value="其他">其他</option>
        </select>   
        </div>    
    </div>
    <div class="form-group row mb-4">
        <label for="inputAmount" class="col-sm-3 col-form-label">金額*:</label>
        <div class="col-sm-9">
        <input type="number" class="form-control" id="inputAmount" name="amount">
        </div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-3"></div>
        <div class="col-sm-9">
        <button type="submit" class="btn btn-warning btn-lg btn-block">新增支出</button>
        </div>
    </div>
</form>


{{#if warning_msg}}
<div class="form-group row">
    <div class="col-sm-3">
    </div>
    <div class="alert alert-danger alert-dismissible fade show col-sm-9" role="alert">
        {{warning_msg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
{{/if}}

{{#if success_msg}}
<div class="form-group row">
    <div class="col-sm-3">
    </div>
    <div class="alert alert-primary alert-dismissible fade show col-sm-9" role="alert">
        {{success_msg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
{{/if}}

{{#if errors}}
{{#each errors}}
<div class="form-group row">
    <div class="col-sm-3">
    </div>
    <div class="alert alert-danger alert-dismissible fade show col-sm-9" role="alert">
        {{this.message}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>
{{/each}}
{{/if}}